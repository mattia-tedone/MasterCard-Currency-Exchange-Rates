          plugins: {
            legend: {
              labels: { color: '#e2e8f0', boxWidth: 12 }
            },
            tooltip: {
              enabled: true,
              mode: 'index',
              intersect: false,
              backgroundColor: 'rgba(0, 0, 0, 0.8)',
              titleColor: '#fff',
              bodyColor: '#fff',
              borderColor: 'rgba(255, 255, 255, 0.2)',
              borderWidth: 1,
              padding: 12,
              displayColors: true,
              callbacks: {
                label: (ctx) => `${ctx.dataset.label}: ${Number(ctx.parsed.y).toFixed(4)} ${quote}`
              }
            }
          }
        }
      });
    }
  </script>
</body>
</html>
